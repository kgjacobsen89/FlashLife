<h1>Listing Users</h1>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Address</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @user.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name%></td>
          <td><%= user.email %></td>
          <td><%= user.phone_number %></td>
          <td><%= user.address %></td>
          <td><%= link_to 'Show', user %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<br>
</div>
