<body class="event-background">
<h1>Listing Events</h1>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>User Id</th>
        <th>Name</th>
        <th>Date</th>
        <th>Location</th>
        <th>Package Type</th>
        <th>Album ID</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.user_id %></td>
          <td><%= event.name %></td>
          <td><%= event.date %></td>
          <td><%= event.location %></td>
          <td><%= event.package_type %></td>
          <td><%= link_to 'Show', event %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<br>
</div>
</body>